{
	"extends": "@vue/tsconfig/tsconfig.json",
	"include": ["src/**/*.ts", "src/**/*.vue"],
	"compilerOptions": {
		"allowImportingTsExtensions": true,
		"allowJs": true,
		"checkJs": false,
		"baseUrl": ".",
		"lib": ["ESNext", "DOM", "DOM.Iterable"],
		"strictNullChecks": true,
	},
	"vueCompilerOptions": {
		"target": 2.7,
		"experimentalModelPropName": {
			"modelValue": {
				"SettingsSelect": true,
			},
		},
	},
}
